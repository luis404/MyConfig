;;Enable evil mode
(require 'evil)
(evil-mode 1)
(evil-set-initial-state 'magit-popup-mode 'emacs)
(evil-set-initial-state 'magit-mode 'emacs)

;;show line number
(linum-mode)

;; eshell can run shell path command
(when (memq window-system '(mac ns))
  (exec-path-from-shell-initialize))
